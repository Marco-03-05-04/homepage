<style>
  .page-team {
    color: var(--color-blue);
  }

  .people {
    margin: var(--spacing-15) 0;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
  }

  .spacer {
    flex: 0 1 16.6666%;
    max-width: 16.6666%;
  }

  .contact-us-button {
    margin-top: var(--spacing-2);
  }


  .team-person-container {
    margin: var(--spacing-7) 0;
    flex: 0 1 33.3333%;
    max-width: 33.3333%;
  }

  .giga-blob {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -430px;
    right: 300px;
    z-index: -1;
  }

  .giga-blob-mobile {
    display: none;
  }

  .contact-us {
    margin-bottom: var(--spacing-10);
  }

  .contact-us-component {
    margin-top: 200px;
    display: block;
  }

  @media only screen and (min-width: 601px) and (max-width: 960px) {
    .title-1 {
      max-width: 60%;
      text-align: left;
    }

    .giga-blob {
      right: 600px;
      top: -500px;
    }

    .people {
      margin: var(--spacing-4) 0;
    }

    .copy {
      max-width: 60%;
    }
  }

  @media only screen and (max-width: 600px) {
    .copy {
      max-width: 80%;
    }

    .people {
      margin: var(--spacing-3) 0;
    }

    .people .spacer {
      display: none;
    }

    .giga-blob {
      display: none;
    }

    .giga-blob-mobile {
      display: block;
      position: absolute;
      width: 1400px;
      overflow: visible;
      top: -130px;
      left: -270px;
      z-index: -1;
    }

    .team-person-container {
      margin: var(--spacing-1) 2px;
      flex: 0 1 calc(50% - 4px);
      max-width: calc(50% - 4px);
    }
  }

  .hex {
    z-index: -1
  }
</style>