<style>
  section {
    margin: var(--spacing-5) 0 var(--spacing-5);
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
  }

  .spacer {
    flex: 0 1 16.6666%;
    max-width: 16.6666%;
  }

  .contact-us-button {
    margin-top: var(--spacing-2);
  }

  .team-person-container {
    margin: var(--spacing-2) 0;
    flex: 0 1 33.3333%;
    max-width: 33.3333%;
  }

  .giga-blob {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -430px;
    right: 300px;
    z-index: -1;
  }

  .giga-blob-mobile {
    display: none;
  }

  .contact-us {
    margin-bottom: var(--spacing-10);
  }

  section p {
    font-size: 25px;
    font-weight: 300;
  }

  @media only screen and (min-width: 601px) and (max-width: 960px) {
    h1 {
      text-align: center;
    }

    .giga-blob {
      right: 600px;
      top: -500px;
    }

    section {
      margin: var(--spacing-4) 0;
    }

    .team-person-container {
      flex: 0 1 50%;
      max-width: 50%;
    }

    .spacer {
      display: none;
    }
  }

  @media only screen and (max-width: 620px) {
    .team-person-container {
      flex: 0 1 100%;
      max-width: 100%;
    }
  }

  @media only screen and (max-width: 600px) {
    section {
      margin: 0 var(--spacing-2);
    }

    section p {
      font-size: 18px;
      font-weight: 300;
    }

    section .spacer {
      display: none;
    }

    .giga-blob {
      display: none;
    }

    .giga-blob-mobile {
      display: block;
      position: absolute;
      width: 1400px;
      overflow: visible;
      top: -130px;
      left: -270px;
      z-index: -1;
    }
  }
</style>