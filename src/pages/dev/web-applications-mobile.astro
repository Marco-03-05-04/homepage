---
import Layout from "../../components/Layout.astro";
import TopBanner from "../../components/TopBanner.astro";
import Button from "../../components/Button.astro";
import Customers from "../../components/Customers.astro";
import Hex from "../../components/Hex.astro";
import HeaderHexagonsDesktop from "../../components/self-development/HeaderHexagonsDesktop.astro";
import HeaderHexagonsMobile from "../../components/self-development/HeaderHexagonsMobile.astro";
import CardHexGroup from "../../components/self-development/CardHexGroup.astro";
import Card from "../../components/Card.astro";
import { webApplicationsAndMobileCard } from "../../utils/cards";
---

<Layout color="light" subPages={true}>
  <TopBanner azure={true} title="Applicazioni web e mobile" mobilealignleft="true" title2={true}>
    <p class="claim" slot="text">
      Utilizziamo le tecnologie open source più all'avanguardia per offrirti il massimo delle performance, la libertà da
      licenze e lock-in, la possibilità di scegliere l'ambiente che preferisci.
    </p>
    <div slot="actions" style="
      display: flex;
      flex-direction: column;
      max-width: 175px;
      margin: auto;
    ">
      <Button variant="primary" href="/contacts/">Contattaci</Button>
    </div>
    <div slot="external">
      <HeaderHexagonsDesktop />
      <HeaderHexagonsMobile />
      <div class="floating-hex-0">
        <Hex width="56" fill="#9893c1" shadow="true" />
      </div>
      <div class="floating-hex-3">
        <Hex width="56" fill="#9893c1" shadow="true" />
      </div>
    </div>
  </TopBanner>
  <section>
    <p>
      Realizziamo web applications e app mobile (iOS e Android) su misura per il tuo business, prendendoci cura di
      tutto il processo: dall'analisi dei requisiti allo sviluppo back-end e front-end.
    </p>
    <div class="services">
      <h3 class="title-3 title-form choose-services">
        I nostri <b>SERVIZI</b>
      </h3>
      <div class="card-container">
        {webApplicationsAndMobileCard.map((card) =>
        <Card title={card.title} description={card.description} />
        )}
        <div class="card-hex-group">
          <CardHexGroup />
        </div>
      </div>
      <Customers title="Chi ci ha scelto" />
    </div>
  </section>
</Layout>

<style>
  .floating-hex-2 {
    position: absolute;
    bottom: -200px;
    left: 50%;
    transform: translateX(-50%);
  }

  .floating-hex-3 {
    position: absolute;
    left: 20%;
    top: 400px;
  }

  .floating-hex-5 {
    position: absolute;
    left: 65%;
    top: 600px;
  }

  .card-hex-group {
    position: absolute;
    left: 50%;
    top: 1075px;
  }

  section p {
    text-align: center;
    margin: var(--spacing-5) 0 var(--spacing-6);
    font-size: 22px;
  }

  .services {
    margin: var(--spacing-5) 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 0 var(--spacing-10);
  }

  .choose-services {
    margin-bottom: var(--spacing-6);
  }

  @media only screen and (max-width: 600px) {
    .floating-hex-3 {
      position: absolute;
      left: 0%;
      top: 490px;
    }

    .card-hex-group,
    .floating-hex-0,
    .floating-hex-3,
    .floating-hex-5 {
      display: none;
    }
  }

  @media only screen and (max-width: 820px) {
    .card-hex-group {
      left: 70%;
      top: 1275px;
    }
  }
</style>