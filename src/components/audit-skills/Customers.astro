---
import Picture from "../../components/Picture.astro";
---

<section>
  <h3>Chi ha scelto <b>HAKA</b></h3>
  <div class="customers">
    <div class="customer">
      <Picture base="customers" src="unioneIndustriale" alt="Unione Industriale" />
    </div>
    <div class="customer">
      <Picture base="customers" src="confindustria" alt="Confindustria" />
    </div>
    <div class="customer">
      <Picture base="customers" src="carrefour" alt="Carrefour" extension="svg" />
    </div>
    <div class="customer">
      <Picture base="customers" src="sanMarco" alt="San Marco" />
    </div>
    <div class="customer">
      <Picture base="customers" src="euroSearch" alt="Euro Search" />
    </div>
  </div>
</section>

<style>
  .customers {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .customer {
    width: 200px;
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 var(--spacing-4) var(--spacing-6);
    max-width: 100%;
    max-height: 100%;
  }
</style>