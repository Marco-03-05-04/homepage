---
import Button from './Button.astro';
import Blob from './Blob.astro';
const {title, blobs, buttonlink} = Astro.props;
---

<section>
  <h1 class="title-1">{title}</h1>
  <div class="container">
    {blobs.map((blob) => (
      <a href={blob.href}>
        <Blob
          interactive="true"
          shape="rectangle"
          style={`max-width: ${blob.width};`}
          fill={blob.color}
          padding="20"
          clickable="true"
        >
          <div class="text">
            <p>
              <img
                src={`../img/icons/${blob.icon}`}
                alt="devices icon"
                width="50"
                height="35"
              />
            </p>
            <p class="claim">
              <b>{blob.title}</b>
            </p>
            <h6>
              {blob.subtitle}
            </h6>
          </div>
        </Blob>
      </a>
    ))}
  </div>
  <div class="centred-button">
  <Button variant="outlined" href={buttonlink} type="button">
    Scopri
  </Button>
  </div>
</section>

<style lang="scss">
  section {
    .container {
      display: flex;
      justify-content: space-between;
      margin-bottom: var(--spacing-10);
      color: var(--color-blue);

      @media only screen and (max-width: var(--breakpoint-tablet-max)) {
        overflow-x: hidden;
        align-items: center;
        min-height: 400px;
        margin-bottom: var(--spacing-1);
        margin-left: - var(--spacing-6);
        margin-right: - var(--spacing-6);

        a {
          margin: 0 var(--spacing-2) !important;
          height: 100%;
          min-width: 260px;
          flex-basis: 100%;
        }
      }
    }

    a {
      margin: 0 var(--spacing-2) !important;
      min-width: 260px;

      &:first-of-type {
        margin-left: 0 !important;
      }
      &:last-of-type {
        margin-right: 0 !important;
      }

      @media only screen and (max-width: var(--breakpoint-tablet-max)) {
        &:first-of-type {
          margin-left: var(--spacing-6) !important;
        }
        &:last-of-type {
          margin-right: var(--spacing-6) !important;
        }
      }
    }

    .text {
      text-align: center;
    }

    p {
      margin-bottom: var(--spacing-1);
    }

    .button {
      display: flex;
      justify-content: center;
    }
  }

  ::-webkit-scrollbar {
    width: 0;
    background: transparent;
  }
</style>
