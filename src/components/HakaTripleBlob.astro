---
import { Icon } from 'astro-icon'
import Button from './Button.astro';
import Blob from './Blob.astro';
const { title, subtitle, blobs, buttonlink } = Astro.props;
---

<section>
  <h4>{title}</h4>
  <p class="subtitle">{subtitle}</p>
  <div class="container">
    {blobs.map((blob) => (
    <a href={blob.href}>
      <Blob interactive={true} shape="rectangle" style={`max-width: ${blob.width};`} fill={blob.color} padding="20"
        clickable="true">
        <div class="text">
          <p class="claim">
            <b>{blob.title}</b>
          </p>
          <div class="centred-button">
            <button class="outlined" href={blob.href} type="button">
              Vai al Piano
            </button>
          </div>
        </div>
      </Blob>
    </a>
    ))}
  </div>
  <div class="container-mobile">
    {blobs.map((blob) => (
    <a href={blob.href} style={`background-color: ${blob.colorMobile}`}>
      <h5>{blob.title}</h5>
      <Icon pack="mdi" name="arrow-right" />
    </a>
    ))}
  </div>
</section>

<style>
  .container {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-10);
    color: var(--color-blue);
  }

  .claim {
    font-size: 24px;
  }

  h4 {
    font-size: 18px;
    text-align: center;
  }

  .subtitle {
    text-align: center;
    margin-bottom: var(--spacing-10);
  }

  .container-mobile {
    display: none;
  }

  a {
    margin: 0 var(--spacing-2);
    min-width: 260px;
  }

  .text {
    text-align: center;
  }

  p {
    margin-bottom: var(--spacing-1);
  }

  h1 {
    margin-top: var(--spacing-20)
  }

  .outlined {
    box-shadow: rgba(0, 0, 0, 0.2) 0px 2px 4px -1px, rgba(0, 0, 0, 0.14) 0px 4px 5px 0px,
      rgba(240, 177, 177, 0.12) 0px 1px 10px 0px;
    border: 0;

    color: var(--color-blue);
    border: 1px solid var(--color-blue);
    background-color: transparent;
    border-radius: 4px;
    padding: 8px 16px;

    transition: background-color var(--transition-timing-quick) var(--transition-function-default);
  }

  .outlined:hover {
    background-color: var(--color-blue);
    color: white;
    cursor: pointer;
  }

  @media only screen and (max-width: 960px) {

    .container,
    .centred-button {
      display: none;
    }

    .container-mobile {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    a {
      display: flex;
      align-items: center;
      width: 327px;
      height: 90px;
      border-radius: 4px;
      margin: var(--spacing-2) 0;
      padding: var(--spacing-2);
      justify-content: space-between;
    }

    h5 {
      color: var(--color-white);
      flex: 0 0 80%;
    }

    svg {
      color: var(--color-white) !important;
      width: 32px;
      height: 32px;
    }
  }
</style>